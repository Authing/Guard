{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client"],
    "isolatedModules": true,
    "skipLibCheck": true
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
