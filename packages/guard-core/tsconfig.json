{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es5",
    "lib": ["dom", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "jsx": "react",
    "downlevelIteration": true,
    "declaration": true,
    "declarationDir": "./dist/typings",
    "paths": {
      "shim-react": ["./shim-react16/"],
      "shim-antd": ["./shim-antd4/"],
      "shim-antd/es/*": ["./shim-antd4/node_modules/antd/es/*"],
      "shim-antd/lib/*": ["./shim-antd4/node_modules/antd/lib/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "example.tsx"
  ],
  "exclude": [
    "node_modules/**"
  ]
}
